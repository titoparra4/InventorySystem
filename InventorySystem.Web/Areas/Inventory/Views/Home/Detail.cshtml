@model InventorySystem.Models.ViewModels.ShoppingCartViewModel

<form method="post">
    <input hidden asp-for="ShoppingCart.ProductId" />
    <input hidden asp-for="WarehouseProduct.Quantity" id="stock" />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-12 col-md-6">
                    <h1 class="text-primary">@Model.ShoppingCart.Product.Description</h1>
                </div>
                <div class="col-12 col-md-6 text-md-right pt-4">
                    <span class="badge badge-success pt-2" style="height:30px;">@Model.ShoppingCart.Product.Brand.Name</span>
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.ShoppingCart.Product.Brand.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Serie : @Model.ShoppingCart.Product.SerialNumber</h5>
                            </div>

                            <div class="row text-center pl-2" style="color:black; font-weight:bold">
                                <div class="p-1 col-3 bg-secondary">
                                    <div>Price</div>
                                </div>
                                <div class="p-1 col-3 bg-secondary">
                                    <div>In Stock</div>
                                </div>
                            </div>
                            <div class="row text-center pl-2" style="color:white; font-weight:bold">
                                <div class="p-1 col-3 bg-info">
                                    <div>@Model.ShoppingCart.Product.Price.ToString("c")</div>
                                </div>
                                <div class="p-1 col-3 bg-info">
                                    <div>@Model.WarehouseProduct.Quantity</div>
                                </div>
                            </div>

                            <div class="row p-4 pl-2">
                                <div class="col-3 text-primary"><h5 class="form-text text-center">Quantity:</h5></div>
                                <div class="col-2"><input class="form-control" asp-for="ShoppingCart.Quantity" style="text-align:right;" min="1" id="quantity" /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.ShoppingCart.Product.ImageUrl" style="width:100%;" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a asp-action="Index" Class="btn btn-success form-control  btn-square btn-lg" style="height:50px;">Return</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">

                        <button type="submit" value="Add to Cart" class="btn btn-primary btn-square btn-lg form-control" style="height:50px;" id="btnAdd">Add to Cart</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        $("#btnAdd").click(function () {
            var stock = document.getElementById("stock").value;
            var quantity = document.getElementById("quantity").value;
            if (quantity.toString()=='' || quantity<1 || quantity>stock) {
                swal("Error", "Select a correct quantity", "error");
                return false;
            }
        });

    </script>
}
