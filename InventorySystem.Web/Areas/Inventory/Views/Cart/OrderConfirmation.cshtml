@model int
<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Order Processed Correctly</h1><br />
        <img src="~/images/confirmacion.jpg" width="50%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Thanks for your order! <br />
        We have received your Order and We will send you an email soon!
        <br />
        Your Order Number is : @Model

        <div class="text-center">
            <a asp-area="Inventory" asp-controller="Home" asp-action="Index" class="btn btn-success">Exit</a>
            <a asp-action="PrintOrder" class="btn btn-warning" asp-route-id="@Model" target="_blank">
                <i class="fas fa-print"></i> Print 
            </a>
        </div>
    </div>
</div>

